  <style>
    body { margin:0; background:#111; color:#eee; font-family:sans-serif; }
    header { padding:10px; background:#222; display:flex; gap:10px; align-items:center; }
    h1 { margin:0; font-size:18px; }
    canvas { background:#000; display:block; margin:10px auto; border:2px solid #333; }
    .panel { background:#222; margin:10px; padding:10px; border-radius:8px; }
    .btn { background:#4fd1c5; border:none; padding:6px 10px; border-radius:6px; cursor:pointer; }
    .kbd { background:#333; padding:2px 6px; border-radius:4px; font-family:monospace; }
  </style>
